{
  "app": {
    "name": "BusTracksV API",
    "version": "1.0.0",
    "description": "API REST con Drogon C++ para sistema de seguimiento de buses",
    "host": "0.0.0.0",
    "port": 8080,
    "threads": 4
  },
  "database": {
    "host": "postgres",
    "port": 5432,
    "name": "bustracksv_db",
    "user": "bustracksv_user",
    "password": "bustracksv_password",
    "pool_size": 10,
    "timeout": 30
  },
  "logging": {
    "level": "INFO",
    "file": "logs/app.log",
    "console": true
  },
  "security": {
    "jwt_secret": "bustracksv_secret",
    "jwt_expire_time": 3600,
    "bcrypt_rounds": 12
  }
}
